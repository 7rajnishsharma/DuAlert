{
    "manifest_version": 3,
    "name": "DuAlert - Duplicate Download Alert System",
    "version": "1.0",
    "description": "Alerts you if a file you're about to download already exists by checking file metadata and content hash.",
    "permissions": [
      "downloads",
      "downloads.open",
      "notifications",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }